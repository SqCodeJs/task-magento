<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="register-link" remove="true" />
        <referenceBlock name="my-account-link" remove="true" />
        <referenceBlock name="catalog.compare.link" remove="true" />

        <referenceBlock name="header-wrapper">
            <container name="header-section" after="-" label="Page Header Section" htmlTag="div" htmlClass="header section-right">
                <container name="icons-wrapper" label="Page Header Icons" htmlTag="div" htmlClass="header icons" />
            </container>
        </referenceBlock>

        <move element="header.panel" destination="icons-wrapper" />
        <move element="minicart" after="-" destination="header.panel" />
        <move element="top.search" destination="header-section" />
    </body>
</page>
